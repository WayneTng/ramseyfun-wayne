doctype html
html
  head
    title Ramseyfan
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    .container
      .row
        .col-md-12
          ul.col-md-2.nav.nav-pills
            li.home = link_to 'Home', dishes_path
          ul.nav.nav-pills.pull-right
            - if fan_signed_in?
              li.create_dish = link_to 'Create Dish', new_dish_path
              li.update_profile = link_to 'Update Profile', edit_fan_registration_path
              li.logout = link_to 'Logout', destroy_fan_session_path, method: :delete
            - else
              li.login = link_to "Log in", new_fan_session_path
              li.sign_up = link_to 'Sign up', new_fan_registration_path
      - if notice
        p.alert.alert-success #{ notice }
      - if alert  
        p.alert.alert-danger #{ alert } 
      = yield

